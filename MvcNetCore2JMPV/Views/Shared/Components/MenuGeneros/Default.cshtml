@model List<Generos>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle"
            type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
            aria-expanded="false">
        Generos
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        @foreach (Generos genero in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Libros" asp-action="Generos" asp-route-genero="@genero.IdGenero">
                    @genero.Nombre
                </a>
            </li>
        }
    </ul>
</div>
